<Window x:Class="Goudkoorts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Goudkoorts"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="sPart"  Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Grid.Background>
                <ImageBrush ImageSource="/Assets/Images/Sea.png"/>
            </Grid.Background>
            <Canvas>
                <Image x:Name="Ship" Height="30" Width="180" Source="Assets/Images/Boat.png" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Left="506" Canvas.Top="70"/>
                <Canvas x:Name="shipLoad" Background="AliceBlue" Width="120" Height="24" Canvas.Left="536" Canvas.Top="73">
                    
                </Canvas>
            </Canvas>
        </Grid>
        <Grid x:Name="tPart" Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        </Grid>
    </Grid>
</Window>
